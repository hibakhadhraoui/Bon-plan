{% extends 'base-admin.html.twig' %}

{% block title %}Plan index{% endblock %}

{% block body %}
    <h1>Plan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DescriptionCourt</th>
                <th>DescriptionLong</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plan in plans %}
            <tr>
                <td>{{ plan.id }}</td>
                <td>{{ plan.name }}</td>
                <td>{{ plan.descriptionCourt }}</td>
                <td>{{ plan.descriptionLong }}</td>
                <td>{{ plan.image }}</td>
                <td>
                    <a href="{{ path('plan_show', {'id': plan.id}) }}">show</a>
                    <a href="{{ path('plan_edit', {'id': plan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('plan_new') }}">Create new</a>
{% endblock %}
